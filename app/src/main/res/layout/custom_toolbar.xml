<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/colorPrimary"
    android:elevation="@dimen/default_toolbar_elevation">

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="?android:attr/actionBarSize"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_centerVertical="true"
        android:padding="@dimen/default_margin"
        android:src="@drawable/ic_home"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_toEndOf="@+id/iv_home"
        android:textColor="@android:color/black"
        android:textSize="@dimen/default_toolbar_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:textAllCaps="true"
        android:textSize="@dimen/default_toolbar_text_button_size"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/default_toolbar_image_size"
        android:layout_height="@dimen/default_toolbar_image_size"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/default_minimal_margin"
        android:src="@drawable/ic_smile"
        android:visibility="gone" />

</RelativeLayout>